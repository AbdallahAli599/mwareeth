<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#142340"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".study.StudyActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/study_start_btn"
        android:background="@drawable/button_2"
        style="@style/studyActivityButtonStyle"
        android:textColor="@color/white"
        android:text="@string/study_start" />
    <Button
        android:id="@+id/study_forood_btn"
        android:background="@drawable/button_2"
        style="@style/studyActivityButtonStyle"
        android:textColor="@color/white"
        android:text="@string/study_locked" />
    <Button
        android:id="@+id/study_....._btn"
        android:background="@drawable/button_2"
        style="@style/studyActivityButtonStyle"
        android:textColor="@color/white"
        android:text="@string/study_locked" />

</LinearLayout>